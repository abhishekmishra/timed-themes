{
    "name": "timed-themes",
    "displayName": "timed-themes",
    "description": "Use different themes at different times of the day.",
    "version": "0.0.1",
    "publisher": "nope",
    "engines": {
        "vscode": "^1.21.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "timed-themes.switch-theme",
                "title": "Switch to scheduled theme",
                "category": "Timed Themes"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "timed-themes configuration",
            "properties": {
                "timed-themes.dark": {
                    "type": "string",
                    "default": "Solarized Dark",
                    "description": "Your dark theme."
                },
                "timed-themes.light": {
                    "type": "string",
                    "default": "Solarized Light",
                    "description": "Your light theme."
                },
                "timed-themes.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable timed-themes."
                },
                "timed-themes.times": {
                    "type": "object",
                    "default": {
                        "dark": [
                            [
                                800,
                                1800
                            ]
                        ],
                        "light": [
                            [
                                0,
                                800
                            ],
                            [
                                1800,
                                2359
                            ]
                        ]
                    },
                    "description": "Times to switch the themes."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}